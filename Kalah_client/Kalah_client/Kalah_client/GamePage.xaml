        <Button Name="OpponentPit5" Content="0" Width="150" Height="150" IsEnabled="False" Tag="12" Click="PitButton_Click" Margin="1295,155,55,595" FontSize="50" BorderBrush="#FF92C9E1" Background="#FF92C9E1" Foreground="#FF4079D3"/>


        <!-- Ряд лунок игрока -->
        <Button Name="PlayerPit0" Content="0" Width="150" Height="150" Click="PitButton_Click" Tag="0" Margin="55,595,1295,154" FontSize="50" Background="#FF6EC16E" BorderBrush="#FF424242" />
        <Button Name="PlayerPit1" Content="0" Width="150" Height="150" Click="PitButton_Click" Tag="1" Margin="237,595,1113,154" FontSize="50" Background="#FF6EC16E" BorderBrush="#FF424242" />
