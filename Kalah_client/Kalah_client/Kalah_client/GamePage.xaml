        <Button Name="PlayerPit4" Content="0" Width="150" Height="150" Click="PitButton_Click" Tag="4" Margin="781,595,569,154" FontSize="50" Background="#FF6EC16E" BorderBrush="#FF424242" />
        <Button Name="PlayerPit5" Content="0" Width="150" Height="150" Click="PitButton_Click" Tag="5" Margin="960,595,390,154" FontSize="50" Background="#FF6EC16E" BorderBrush="#FF424242" />
        <Button x:Name="PlayerKalaha" Content="Калах: 0" IsEnabled="False" Width="300" Height="300" Margin="1138,523,62,77" FontSize="50" Background="#FF367B42" BorderBrush="#FF367B42" Foreground="#FF367B42" Click="PlayerKalaha_Click"/>


    </Grid>
</Page>
