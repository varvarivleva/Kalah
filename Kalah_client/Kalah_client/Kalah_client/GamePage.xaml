        <Button Name="OpponentPit0" Content="0" Width="150" Height="150" Tag="7" Click="PitButton_Click" Margin="390,154,960,596" FontSize="50" Background="#FF92C9E1" IsEnabled="False" Foreground="#FF4079D3"/>
        <Button Name="OpponentPit1" Content="0" Width="150" Height="150" IsEnabled="False" Tag="8" Click="PitButton_Click" Margin="569,154,781,596" FontSize="50" Background="#FF92C9E1" Foreground="#FF4079D3"/>
        <Button Name="OpponentPit2" Content="0" Width="150" Height="150" IsEnabled="False" Tag="9" Click="PitButton_Click" Margin="748,154,602,596" FontSize="50" Background="#FF92C9E1" Foreground="#FF4079D3" />
