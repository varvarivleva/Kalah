<Page x:Class="KalahClient.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login">
    <Grid>
        <TextBox Name="UsernameBox" Width="200" Height="30" Margin="0,50,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Text="Логин"/>
        <PasswordBox Name="PasswordBox" Width="200" Height="30" Margin="0,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Button Content="Войти" Width="100" Height="30" VerticalAlignment="Bottom" Margin="0,0,0,50" Click="LoginButton_Click"/>
    </Grid>
</Page>
