<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      x:Class="KalahClient.LoginPage"
      Title="Login" Height="400" Width="300">
    <Grid>
        <TextBox x:Name="UsernameBox" Width="200" Height="30" Margin="0,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox" Width="200" Height="30" Margin="0,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <TextBox x:Name="EmailBox" Width="200" Height="30" Margin="0,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Button Content="Войти" Width="100" Height="30" VerticalAlignment="Top" Margin="0,150,0,0" Click="LoginButton_Click"/>
        <Button Content="Регистрация" Width="100" Height="30" VerticalAlignment="Top" Margin="0,190,0,0" Click="RegisterButton_Click"/>
    </Grid>
</Page>
