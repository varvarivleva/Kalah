<Page x:Class="KalahClient.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login Page">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBox x:Name="UsernameTextBox" Margin="0,10" />
            <PasswordBox x:Name="PasswordTextBox" Margin="0,10" />
            <Button Content="Login" Click="LoginButton_Click" Margin="0,10" />
            <Button Content="Register" Click="RegisterButton_Click" Margin="0,10" />
        </StackPanel>
    </Grid>
</Page>
